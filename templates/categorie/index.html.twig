{% extends 'base.html.twig' %}

{% block title %}Liste Categories{% endblock %}

{% block body %}
    <h1>Liste des catégories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cat</th>
                <th>Description</th>
                <th>Photo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.cat }}</td>
                <td>{{ categorie.description }}</td>
                <td>{{ categorie.photo }}</td>
                <td>
                    <a href="{{ path('categorie_show', {'id': categorie.id}) }}">Voir</a>
                    <a href="{{ path('categorie_edit', {'id': categorie.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas de catégories</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('categorie_new') }}">Ajouter une catégorie</a>
{% endblock %}
