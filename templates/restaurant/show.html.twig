{% extends 'base.html.twig' %}

{% block title %}Restaurant{% endblock %}
{% block stylesheets %}{% endblock %}

{% block body %}
<div class="container">
<div class="row">
    <div class="col-4 px-5"><h1>Restaurant</h1></div>
</div>

<div class="row">
<div class="col-4 px">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ restaurant.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ restaurant.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ restaurant.adresse }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ restaurant.description }}</td>
            </tr>
            <tr>
                <th>Nationalite</th>
                <td>{{ restaurant.nationalite }}</td>
            </tr>
            <tr>
                <th>Specificite</th>
                <td>{{ restaurant.specificite }}</td>
            </tr>
            <tr>
                <th>Prix_moyen</th>
                <td>{{ restaurant.prixMoyen }}</td>
            </tr>
            </tbody>
            </table>
            
</div>
</div>

<div class="row">
<div class="col-4 paddingBottom">

    <img src="{{ restaurant.photo }}" alt="photo de {{ restaurant.nom }}">

    <a href="{{ path('restaurant_index') }}">Retour Ã  la liste</a>

    {% if is_granted("ROLE_ADMIN") %}
    <a href="{{ path('restaurant_edit', {'id': restaurant.id}) }}">Modifier</a>
    {{ include('restaurant/_delete_form.html.twig') }}


    {% endif %}
</div>
</div>

{% endblock %}
