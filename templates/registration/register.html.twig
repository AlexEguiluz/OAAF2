{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container">
        <div class="row"><div class="col text-center pb-5 pt-5"><h1>Inscription</h1></div></div>

            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.nom) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
            {# {{ form_row(registrationForm.agreeTerms) }} #}

        <div class="row"><div class="col text-center pb-2 pt-4"><button type="submit" class="btn btn-secondary">S'inscrire</button></div></div>
            {{ form_end(registrationForm) }}
    </div>
{% endblock %}
